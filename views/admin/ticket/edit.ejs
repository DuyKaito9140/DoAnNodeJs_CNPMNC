  <body>
    <div class="container mt-3">
     <h3 class="text-center">Cập nhật Chuyến Bay</h3>
      <form action="/admin/ticket/edit" method="post">
      <label for="idvemaybay">ID Vé Máy Bay</label>
      <input type="text" name="idvemaybay" value="<%= data.idvemaybay %>" class="form-control" readonly>
      <label for="idchuyenbay">ID Chuyến Bay</label>
      <input type="text" name="idchuyenbay" value="<%= data.idchuyenbay %>" class="form-control" readonly>
      <label for="sokghanhlymacdinh">Số lượng Kg hành lý mặc định</label>
      <input type="text" name="sokghanhlymacdinh" value="<%= data.sokghanhlymacdinh %>" class="form-control">
      <label for="giave">Giá vé</label>
      <input type="text" name="giave" value="<%= data.giave %>" class="form-control">          
      <input type="submit" value="Cập nhật" class="btn btn-primary mt-2"> <br>
      <a href="/admin/ticket/index">Quay lại?</a>
     </form>
    </div>
