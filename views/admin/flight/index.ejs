    <div class="container mt-3">
      <a href="/admin/flight/add" class="btn btn-success">Thêm mới chuyến máy bay</a>
      <table class="table">
        <thead>
          <th>ID Chuyến bay</th>
          <th>Ngày bay</th>
          <th>Giờ bay</th>
          <th>Giờ đến</th>
          <th>Nơi đi</th>
          <th>Nới đến</th>
          <th>Tên máy bay</th>
          <th>Hãng máy bay</th>
          <th></th>
        </thead>
        <tbody>
          <% print.forEach(function (chuyenbay) { %>
            <tr>  
              <td><%= chuyenbay.idchuyenbay %></td>
              <td><%= chuyenbay.ngaybay %></td>
              <td><%= chuyenbay.giobay %></td>
